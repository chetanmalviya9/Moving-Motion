<!DOCTYPE html>
<html>

<head>
	<title>Login Form</title>
	<link rel="stylesheet" type="text/css" href="css/login.css">
	<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
	<script src="https://kit.fontawesome.com/a81368914c.js"></script>
</head>

<body>
	<a style="float:left ; font-size:24px" href="/" class="fas fa-angle-left  "></a>

	<img class="wave" src="">
	<div class="container">
		<div class="img">
			<img src="">
		</div>
		<div class="login-content">
			<form action="/login" method="post" onclick="  return validation()" class=" bg-light">
				<img src="">
				<h2 class="title">Welcome</h2>
				<div class="input-div one">
					<div class="i">
						<i class="fas fa-user"></i>
					</div>
					<div class="div">
						<input required type="email" class="input" id="user" placeholder="username" name="email">
					</div>
				</div>
				<span id="name-error"></span>
				<!-- ------------- -->
				<div class="input-div one">
					<div class="i">
						<i class="fas fa-lock"></i>
					</div>
					<div class="div">
						<input required type="password" name="Password" class="input" id="pass" placeholder="password"
							pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">

					</div>
				</div>
				<span id="pass-error"></span>
				<a href="#" class="login">forget Password</a>
				<button type="submit" class="btn" onclick="valid()">Login</button>
			</form>
		</div>
	</div>

	<!-- <script type="text/javascript" src="login.js"></script> -->

	<script>
		var name_error = document.getElementById("name-error");
		var pass_error = document.getElementById("pass-error");
		function valid() {
			var password = document.getElementById("pass").value;
			var username = document.getElementById("user").value;
			var regex = /^[A-Za-z]/;
			var passw = /^[A-Za-z]\w{7,14}$/;
			if ((username == "") && (regex.test(username) == false)) {
				name_error.innerHTML = "Please enter your Name";
				//   alert("Please enter your Name");
			}
			else {
				if (password.test(passw) == true) {
					alert('Correct, try another...')
					return true;
				}
				else {
					alert('Wrong...!')
					return false;
				}
			}
		}
	</script>
</body>

</html>