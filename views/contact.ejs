<!DOCTYPE html>
<html>

<head>
	<title>Login Form</title>
	<link rel="stylesheet" type="text/css" href="css/login.css">
	<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
	<script src="https://kit.fontawesome.com/a81368914c.js"></script>
</head>

<body>
	<img class="wave" src="">
	<div class="container">
		<div class="img">
			<img src="">
		</div>
		<div class="login-content">
			<form action="" class="login" name="cont" id="myform">
				<img src="">
				<h2 class="title">Welcome</h2>
				<div class="input-div one">
					<div class="i">
						<i class="fas fa-user"></i>
						<!-- <a href="image.png"></a> -->
					</div>
					<div class="div">
						<input required type="text" class="input" id="form" placeholder="contact"><br>
					</div>
				</div>
				<span style="color: red;" id="contact-error"></span>

				<br><button type="Login" class="btn" onclick=" return convalidation()">SEND OTP</button><br>
				<a href="login.html" class="login">Try Another Way</a><br>
				<a href="SignUp.html" class="">Not a user?<span><u> Sign-up</u></span></a>
			</form>
		</div>
	</div>
	<!-- <script type="text/javascript" src="js/login.js"></script> -->

	<script>


		function convalidation() {
			var phone = document.getElementById("form").value;
			if (phone == "") {
				document.getElementById('contact-error').innerHTML = "Please enter your Mobile-No";
			}
			else {
				var regex = /^\d{10}$/;
				if (regex.test(phone) == false) {
					document.getElementById('contact-error').innerHTML = "enter proper contact no.";
					return false;
				}
				if ((phone.charAt(0) != 9) && (phone.charAt(0) != 8) && (phone.charAt(0) != 7)) {
					document.getElementById('contact-error').innerHTML = " mobile number must be start wit 9,8,7 ";
					return false;
				}

				else {
					document.getElementById("myform").action = "otp1.html";
					return true;
				}
			}

		}

	</script>
</body>

</html>