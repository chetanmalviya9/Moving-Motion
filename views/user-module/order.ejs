<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body style="background-color:rgb(193, 222, 240) ;">
    <div class="table table-responsive">
        <table class="table table-condensed table-hover table-striped table-bordered">
            <caption id="first">
                <h2>
                    <center> Registerd-User-list</center>
                </h2>
            </caption>
            <thead style="background-color:rgb(99, 104, 109);text-align: center;color: aliceblue;">
                <tr>
                    <!-- <th>S.no</th> -->
                    <th>User-Name</th>
                    <th>Pick-up Location</th>
                    <!-- <th>pickUpcontact</th> -->
                    <th>Delivery Location</th>
                    <!-- <th>destinationcontact</th> -->
                    <th>Pick-up Date</th>
                </tr>
            </thead>
            <tbody style="text-align: center;">
                <%x.forEach((y)=>{%>

                    <tr>
                        <!-- <td></td> -->
                        <td>
                            <%=y.user%>
                        </td>
                        <td>
                            <%=y.pickuplocation%>
                        </td>
                        <!-- <td>
                            <%=y.pickUpcontact%>
                        </td> -->
                        <td>
                            <%=y.deliverylocation%>
                        </td>
                        <!-- <td>
                            <%=y.destinationcontact%>
                        </td> -->
                        <td>
                            <%=y.pickupdate%>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                Accept
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Enter Price </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/user/order" method="post">
                                                <% Mobe=y.mobile%>
                                                    <input type="text" name="price" placeholder="Enter price" id="">
                                                    <br><br>

                                                    <input type="submit" style="width:100%" class="btn btn-success">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <%})%>
            </tbody>

        </table>

    </div>
</body>

</html>